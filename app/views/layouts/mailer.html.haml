/ saved from url=(0089)https://www.alsacreations.com/xmedia/tuto/email/responsive/email-template-responsive.html
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Mail From TManager
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    :css
      /* Fonts and Content */
      body, td { font-family: 'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif; font-size:14px; }
      body { background-color: #2A374E; margin: 0; padding: 0; -webkit-text-size-adjust:none; -ms-text-size-adjust:none; }
      h2{ padding-top:12px; /* ne fonctionnera pas sous Outlook 2007+ */color:#0E7693; font-size:22px; }

      @media only screen and (max-width: 480px) {

          table[class=w275], td[class=w275], img[class=w275] { width:135px !important; }
          table[class=w30], td[class=w30], img[class=w30] { width:10px !important; }
          table[class=w580], td[class=w580], img[class=w580] { width:280px !important; }
          table[class=w640], td[class=w640], img[class=w640] { width:300px !important; }
          img{ height:auto;}
           /*illisible, on passe donc sur 3 lignes */
          table[class=w180], td[class=w180], img[class=w180] {
              width:280px !important;
              display:block;
          }
          td[class=w20]{ display:none; }
      }
    %script{:src => "./Template mailing Alsacreations_files/finder.js.téléchargement", :type => "text/javascript"}
  %body{:style => "margin:0px; padding:0px; -webkit-text-size-adjust:none;"}
    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "background-color:rgb(42, 55, 78)", :width => "100%"}
      %tbody
        %tr
          %td{:align => "center", :bgcolor => "#2c3e50"}
            %table{:border => "0", :cellpadding => "0", :cellspacing => "0"}
              %tbody
                %tr
                  %td.w640{:height => "10", :width => "640"}
                %tr
                  %td.w640{:height => "10", :width => "640"}
                / entete
                %tr.pagetoplogo
                  %td.w640{:width => "640"}
                    %table.w640{:bgcolor => "#F2F0F0", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "640"}
                      %tbody
                        %tr
                          %td.w30{:width => "30"}
                          %td.w580{:align => "left", :valign => "middle", :width => "580"}
                            .pagetoplogo-content
                              %img.w580{:alt => "Mon Logo", :height => "108", :onclick => "location.href = 'http://tmanager.lambre.me'", :onmouseover => "this.style.cursor ='pointer';", :src => "http://tmanager.lambre.me/assets/logo/Tmanagerfull.png", :style => "text-decoration: none; display: block; color:#476688; font-size:50px;", :width => "482"}/
                          %td.w30{:width => "30"}
                / separateur horizontal
                %tr
                  %td.w640{:bgcolor => "#d7d6d6", :height => "1", :width => "640"}
                / contenu
                %tr.content
                  %td.w640{:bgcolor => "#ffffff", :width => "640"}
                    %table.w640{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "640"}
                      %tbody
                        %tr
                          %td.w30{:width => "30"}
                          %td.w580{:width => "580"}
                            / une zone de contenu
                            %table.w580{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "580"}
                              %tbody
                                %tr
                                  %td.w580{:width => "580"}
                                    = yield
                                %tr
                                  %td.w580{:bgcolor => "#c7c5c5", :height => "1", :width => "580"}
                          / fin zone
                          %td.w30{:width => "30"}
                / separateur horizontal de 15px de haut
                %tr
                  %td.w640{:bgcolor => "#ffffff", :height => "15", :width => "640"}
                / pied de page
                %tr.pagebottom
                  %td.w640{:width => "640"}
                    %table.w640{:bgcolor => "#c7c7c7", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "640"}
                      %tbody
                        %tr
                          %td{:colspan => "5", :height => "10"}
                        %tr
                          %td.w30{:width => "30"}
                          %td.w580{:valign => "top", :width => "580"}
                            %p{:align => "center", :style => "font-weight: bold"} L'équipe de TManager
                            %p.pagebottom-content-left{:align => "right", :style => "font-size: 12px"}
                              Template par
                              %a{:href => "https://www.alsacreations.com/xmedia/tuto/email/responsive/www.alsacreations.com", :style => "color:#255D5C;"}
                                %span{:style => "color:#255D5C;"} Alsacreations.com
                          %td.w30{:width => "30"}
                        %tr
                          %td{:colspan => "5", :height => "10"}
                %tr
                  %td.w640{:height => "60", :width => "640"}