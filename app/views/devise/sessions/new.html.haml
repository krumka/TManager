.row
  %h1.col-xs-12 Log in
.row
  .col-sm-6.col-sm-offset-3.text-center
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        .input-group
          .input-group-addon
            %i.fa.fa-envelope{"aria-hidden" => "true"}
          = f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control"
      .form-group
        .input-group
          .input-group-addon
            %i.fa.fa-key{"aria-hidden" => "true"}
          = f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control"
      .row
        - if devise_mapping.rememberable?
          .col-sm-8.field
            .btn-group{"data-toggle" => "buttons"}
              %label.btn.btn-success.active
                = f.check_box :remember_me
                Remember me
        .col-sm-4.actions
          = f.submit "Log in", class: "btn btn-primary"
.row
  .col-xs-12.text-center= render "devise/shared/links"