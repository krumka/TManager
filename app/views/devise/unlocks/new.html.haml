.row
  %h1.col-xs-12 Resend unlock instructions
.row
  .col-sm-6.col-sm-offset-3.text-center
    = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .form-group
        .input-group
          .input-group-addon
            %i.fa.fa-envelope{"aria-hidden" => "true"}
          = f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control"
      .actions
        = f.submit "Resend unlock instructions", class: 'btn btn-primary btn-up'
.row
  .col-xs-12.text-center= render "devise/shared/links"