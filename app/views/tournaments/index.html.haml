.row.title-page
  %h1.col-sm-9 Listing tournaments
  .col-sm-3= link_to 'New Tournament', new_tournament_path, class: "btn-up btn btn-primary"

- @tournaments.each do |t|
  .row.tournament.text-center
    .col-xs-12
      .row
        .col-sm-10.title= link_to t.name, t
        .col-sm-2.date= t.date.day.to_s + "/" + t.date.month.to_s + "/" + t.date.year.to_s
      .row
        -t.games.each do |g|
          .col-sm-3.game= link_to g.name, g