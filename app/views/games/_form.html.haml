= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :game_type
    %br/
    = f.text_field :game_type
  .field
    = f.label :platform
    %br/
    = f.text_field :platform
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit