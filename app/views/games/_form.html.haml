= form_for(@game, html: {multipart: true}) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .input-group
      .input-group-addon
        %i.fa.fa-tag{"aria-hidden" => "true"}
      = f.text_field :name, class: "form-control", placeholder: "Name"
  .form-group
    .input-group
      = f.file_field :image, class: "form-control"
  .form-group
    .input-group
      .input-group-addon
        %i.fa.fa-list{"aria-hidden" => "true"}
      = f.text_field :game_type, class: "form-control", placeholder: "Game Type"
  .form-group
    .input-group
      .input-group-addon
        %i.fa.fa-gamepad{"aria-hidden" => "true"}
      = f.text_field :platform, class: "form-control", placeholder: "Platform"
  .form-group
    .input-group
      .input-group-addon
        %i.fa.fa-align-left{"aria-hidden" => "true"}
      = f.text_area :description, class: "form-control", placeholder: "Platform"
  .actions
    = f.submit "Update", class: "btn btn-primary"