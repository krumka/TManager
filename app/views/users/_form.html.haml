= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .field
    = f.label :adress
    %br/
    = f.text_field :adress
  .field
    = f.label :country
    %br/
    = f.text_field :country
  .field
    = f.label :role
    %br/
    = f.number_field :role
  .actions
    = f.submit