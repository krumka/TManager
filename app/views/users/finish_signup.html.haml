= render :layout => "layouts/h1" do
  Add Email
.row
  .col-sm-6.col-sm-offset-3
    = form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f|
      - if @show_errors || current_user.errors.any?
        #error_explanation
          - current_user.errors.full_messages.each do |msg|
            = msg
            %br/
      .form-group
        .input-group
          .input-group-addon
            %i.fa.fa-envelope{"aria-hidden" => "true"}
          = f.email_field :email, :autofocus => true, :value => '', class: 'form-control input-lg', placeholder: 'Example: email@me.com'
        %p.help-block Please confirm your email address. No spam.
      .form-group
        .input-group
          .input-group-addon
            %i.fa.fa-user{"aria-hidden" => "true"}
          = f.text_field :username, :value => '', class: 'form-control input-lg', placeholder: 'Username'
      .actions
        = f.submit 'Continue', :class => 'btn btn-primary'