.row.title-page
  .col-sm-9
    %h1 Listing Users
  .col-sm-3
    = link_to 'New User', new_user_path, class: "btn-up btn btn-success"
.row
  .col-xs-12
    %table.table
      %tr
        %th Username
        %th Email
        %th Adress
        %th Country
        %th Role
        %th
        %th
        %th
      - @users.each do |user|
        %tr
          %td= user.username
          %td= user.email
          %td= user.full_address
          %td= user.country
          %td= user.role
          %td= link_to 'Show', user, class: "btn-up btn btn-primary"
          %td= link_to 'Edit', edit_user_path(user), class: "btn-up btn btn-warning"
          %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-up btn btn-danger"